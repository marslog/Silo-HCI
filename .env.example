# Silo HCI Configuration
APP_NAME="Silo HCI"
APP_ENV=production
APP_DEBUG=false
APP_URL=http://localhost

# Backend API
API_HOST=localhost
API_PORT=5000
API_PREFIX=/api/v1

# Database
DB_TYPE=sqlite
DB_PATH=database/silo.db

# Cache
CACHE_ENABLED=true
CACHE_TTL=60
CACHE_DRIVER=sqlite

# Session
SESSION_LIFETIME=7200
SESSION_SECURE=false

# Security
SECRET_KEY=change-this-to-random-string
JWT_SECRET=change-this-to-random-jwt-secret
CSRF_ENABLED=true

# Proxmox (use config/proxmox.json instead)
PROXMOX_HOST=
PROXMOX_PORT=8006
PROXMOX_USER=
PROXMOX_PASSWORD=

# Offline Mode
OFFLINE_MODE=true
SYNC_INTERVAL=300

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/silo.log

# Performance
MAX_WORKERS=4
WORKER_TIMEOUT=30
